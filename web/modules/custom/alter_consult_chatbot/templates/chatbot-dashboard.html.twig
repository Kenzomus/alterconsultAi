{#
/**
 * @file
 * Default theme implementation to display the chatbot dashboard.
 *
 * Available variables:
 * - stats: An array of conversation statistics.
 * - recent_conversations: An array of recent conversations.
 * - project_estimates: An array of project estimates.
 */
#}
<div class="chatbot-dashboard">
  <div class="dashboard-stats">
    <div class="stat-card">
      <h3>{{ 'Total Conversations'|t }}</h3>
      <div class="stat-value">{{ stats.total_conversations }}</div>
    </div>
    <div class="stat-card">
      <h3>{{ 'Conversations Today'|t }}</h3>
      <div class="stat-value">{{ stats.conversations_today }}</div>
    </div>
    <div class="stat-card">
      <h3>{{ 'Average Length'|t }}</h3>
      <div class="stat-value">{{ stats.avg_conversation_length }}</div>
    </div>
    <div class="stat-card">
      <h3>{{ 'Unique Users'|t }}</h3>
      <div class="stat-value">{{ stats.unique_users }}</div>
    </div>
  </div>

  <div class="dashboard-content">
    <div class="recent-conversations">
      <h2>{{ 'Recent Conversations'|t }}</h2>
      {% for conversation in recent_conversations %}
        <div class="conversation-card">
          <div class="conversation-header">
            <span class="timestamp">{{ conversation.timestamp|date('Y-m-d H:i:s') }}</span>
            <span class="user">User ID: {{ conversation.uid }}</span>
          </div>
          <div class="conversation-messages">
            <div class="user-message">
              <strong>{{ 'User'|t }}:</strong> {{ conversation.user_message }}
            </div>
            <div class="ai-message">
              <strong>{{ 'AI'|t }}:</strong> {{ conversation.ai_response }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="project-estimates">
      <h2>{{ 'Recent Project Estimates'|t }}</h2>
      {% for estimate in project_estimates %}
        <div class="estimate-card">
          <h3>{{ estimate.summary }}</h3>
          <div class="estimate-details">
            {{ estimate.response|nl2br }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>